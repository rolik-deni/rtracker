{% extends "BackEndBundle::base.html.twig" %}
{% block title %}Авторизация{% endblock %}
{% block content %}
<div class="container login">
    <div class="title row">
        <div class="title__col col-12">
            <div class="title__content">
                <div class="title__text text_one-line">
                    Авторизация
                </div>
            </div>
        </div>
    </div>
    <div class="main row">
        <div class="main__col col-12">
            <div class="main__content main__content_indent_yes">
                <form action="{{ path('login') }}" method="POST" class="form page__form form_narrow">
                    {% if error %}
                    <div>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}
                    <div class="form-group">
                        <label class="form__label" for="email">
                            Адрес электронной почты
                        </label>
                        <input class="form__input form-control" id="email" name="_email" placeholder="E-mail адрес" value="{{ lastEmail }}" type="email"/>
                    </div>
                    <div class="form-group clearfix">
                        <label class="form__label" for="password">
                            Пароль
                        </label>
                        <input class="form__input form-control" id="password" name="_password" placeholder="Пароль" type="password"/>
                        <a class="form__reset-link support-menu__link" href="">
                            восстановить пароль
                        </a>
                    </div>
                    <button class="form__submit" type="submit">
                        <i class="form__submit-icon fa fa-unlock-alt">
                        </i>
                        Авторизоваться
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
